<?xml version="1.0" encoding="utf-8"?>
<com.hisbaan.sticky.models.SquareCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inside_folder_layout"
    android:layout_width="wrap_content"
    android:layout_height="208dp"
    android:layout_margin="4dp"
    android:background="@color/colorSubText"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/note_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.85"
            android:padding="2dp" />

        <TextView
            android:id="@+id/note_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:text="@string/app_name"
            android:textSize="20sp"/>
    </LinearLayout>
</com.hisbaan.sticky.models.SquareCardView>